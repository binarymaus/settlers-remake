<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
									  xmlns:app="http://schemas.android.com/apk/res-auto"
									  android:layout_width="match_parent"
									  android:layout_height="match_parent"
									  app:columnCount="3">

	<Button
		android:id="@+id/button_convert_one_pioneer"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_margin="8dp"
		android:text="@string/convert_one"
		app:layout_columnWeight="1"
		app:layout_gravity="center_vertical"/>

	<ImageView
		android:id="@+id/image_view_pioneer"
		android:layout_width="@dimen/menu_tile_occupied_height"
		android:layout_height="@dimen/menu_tile_occupied_height"
		app:layout_gravity="center"
		android:scaleType="fitCenter"/>

	<Button
		android:id="@+id/button_convert_all_pioneer"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_margin="8dp"
		android:text="@string/convert_all"
		app:layout_columnWeight="1"
		app:layout_gravity="center_vertical"/>


	<Button
		android:id="@+id/button_convert_one_geologist"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_margin="8dp"
		android:text="@string/convert_one"
		app:layout_columnWeight="1"
		app:layout_gravity="center_vertical"/>

	<ImageView
		android:id="@+id/image_view_geologist"
		android:layout_width="@dimen/menu_tile_occupied_height"
		android:layout_height="@dimen/menu_tile_occupied_height"
		app:layout_gravity="center"
		android:scaleType="fitCenter"/>

	<Button
		android:id="@+id/button_convert_all_geologist"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_margin="8dp"
		android:text="@string/convert_all"
		app:layout_columnWeight="1"
		app:layout_gravity="center_vertical"/>


	<Button
		android:id="@+id/button_convert_one_thief"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_margin="8dp"
		android:text="@string/convert_one"
		app:layout_columnWeight="1"
		app:layout_gravity="center_vertical"/>

	<ImageView
		android:id="@+id/image_view_thief"
		android:layout_width="@dimen/menu_tile_occupied_height"
		android:layout_height="@dimen/menu_tile_occupied_height"
		app:layout_gravity="center"
		android:scaleType="fitCenter"/>

	<Button
		android:id="@+id/button_convert_all_thief"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_margin="8dp"
		android:text="@string/convert_all"
		app:layout_columnWeight="1"
		app:layout_gravity="center_vertical"/>


</android.support.v7.widget.GridLayout>